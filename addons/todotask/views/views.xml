        action = {
          "type": "ir.actions.act_window",
          "view_mode": "tree,form",
          "res_model": self._name,
        }
      </field>
    </record>
    -->

    <!-- Top menu item -->

        <menuitem name="todotask" id="menu_root"/>
 
    <!-- menu categories -->

        <menuitem name="Todo Manager" id="menu_todotask_manager" parent="menu_root"/>

    <!-- actions -->
  
        <menuitem name="Todo Task" id="menu_todotask_list" parent="menu_todotask_manager"
                action="todo_task_window"/>
    <!--
    <menuitem name="Server to list" id="todotask" parent="todotask.menu_2"
              action="todotask.action_server"/>
    -->
    </data>
</odoo>