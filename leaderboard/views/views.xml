<odoo>
  <data>
    <!-- explicit list view definition -->
    <record model="ir.ui.view" id="leaderboard.list">
      <field name="name">leaderboard list</field>
      <field name="model">leaderboard.leaderboard</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="leaderboard_description"/>
          <field name="Leaderboard_priority"/>
        </tree>
      </field>
    </record>

    <!-- actions opening views on models -->
    <record model="ir.actions.act_window" id="leaderboard.action_window">
      <field name="name">leaderboard window</field>
      <field name="res_model">leaderboard.leaderboard</field>
      <field name="view_mode">tree,form</field>
    </record>

    <!-- server action to the one above -->
    <record model="ir.actions.server" id="leaderboard.action_server">
      <field name="name">leaderboard server</field>
      <field name="model_id" ref="model_leaderboard_leaderboard"/>
      <field name="state">code</field>
      <field name="code">
        action = {
          "type": "ir.actions.act_window",
          "view_mode": "tree,form",
          "res_model": self._name,
        }
      </field>
    </record>

    <!-- Top menu item -->
    <menuitem name="PSS Leaderboard" id="leaderboard.menu_root"
        web_icon="leaderboard,static/description/icon.png"/>

    <!-- menu categories -->
    <menuitem name="Work Orders" id="leaderboard.work_orders" parent="leaderboard.menu_root"/>
    <menuitem name="Engineering ToDo" id="leaderboard.engineering_todo" parent="leaderboard.menu_root"/>
    <menuitem name="Configuration" id="leaderboard.configuration" parent="leaderboard.menu_root"/>

    <!-- actions -->
    <menuitem name="WO List" id="leaderboard.work_orders_list" parent="leaderboard.work_orders"
              action="leaderboard.action_window"/>
    <menuitem name="ToDo List" id="leaderboard.engineering_todo_list" parent="leaderboard.engineering_todo"
              action="leaderboard.action_window"/>
    <menuitem name="Configuration List" id="leaderboard.configuration_list" parent="leaderboard.configuration"
              action="leaderboard.action_window"/>
<!--
    <menuitem name="Server to list" id="leaderboard" parent="leaderboard.engineering_todo"
              action="leaderboard.action_server"/>
-->
  </data>
</odoo>